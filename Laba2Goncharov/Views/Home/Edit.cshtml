@model Laba2Goncharov.Models.Note

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Редактирование</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>@Model.Caption</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        @Html.Label("Заголовок", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Caption, new { htmlAttributes = new { @class = "form-control", @value = $"{Model.Caption}" } })
            @Html.ValidationMessageFor(model => model.Caption, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.Hidden("Added", Model.Added)
    </div>

    <div class="form-group">
        @Html.Label("Текст", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Text, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Text, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Сохранить" class="btn btn-success" />

            <a href="/Home/Index" class="btn btn-link">Отмена</a>
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("К списку заметок", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
